@model IEnumerable<Student>

@{ ViewBag.Title = "Student List"; }

<div class="card-deck">
    @foreach(var student in Model)
    {
        var photoPath = "~/Images/" + (student.PhotoPath ?? "images.jpg");

<div class="card m-3" style="min-width: 18rem; max-width: 30.5%">
    <div class="card-header">
        <h3>@student.Name</h3>
    </div>
    <img class="card-img-top imageThumbnail" src="@photoPath"
         asp-append-version="true" />

    <div class="card-footer text-center">
        <a asp-controller="Home" asp-action="Details" asp-route-id="@student.EncryptedId"
           class="btn btn-primary">View</a>
        <a asp-action="edit" asp-controller="home"
           asp-route-id="@student.Id"
           class="btn btn-primary m-1">Edit</a>
        <a href="#" class="btn btn-primary m-1">Delete</a>
    </div>
</div>}

</div>
